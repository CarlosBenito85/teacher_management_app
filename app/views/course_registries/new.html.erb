<% provide(:title, 'Create Course Registry') %>
<% @teacher ||= current_teacher %>
<div class="jumbotron">
  <h1><%= @teacher.name %>: All Course</h1>
  <ul class="item_list">
    <% @courses.each do |course| %>
      <li>
        <%= form_with(model: @course_registry, remote: true) do |f| %>
          <div><%= hidden_field_tag :teacher_id, @teacher.id %></div>
          <div><%= hidden_field_tag :course_id, course.id %></div>
          <%= course.title %>
          <%= f.submit "Registry", class: "btn btn-primary" %>
        <% end %>
      </li>
    <% end %>
    <br/>
    <%= link_to "Create new Course", new_course_path, class: "btn btn-lg btn-primary" %>
  </ul>
</div>